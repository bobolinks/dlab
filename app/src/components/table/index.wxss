.discovery {
  height: 100%;
  font-size: 24rpx;
}

.list {
  padding: 0;
  background-color: white;
}

.item {
  border-top: 1px solid #f2f2f2;
  padding: 20rpx;
}

.item:first-child {
  border-top: none;
}

.item .title {
  font-size: 28rpx;
  font-weight: 500;
}

.item .item-amount {
  background-color: #ff9900;
  color: white;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.item .cover {
  margin: 8rpx 0;
  border: 1px solid #f2f2f2;
  border-radius: 16rpx;
  width: 100%;
  height: 320rpx;
}

.item .intro {
  color: #777;
}